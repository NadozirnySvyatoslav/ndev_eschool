<odoo>
    <record id="eschool_timetable_form_view" model="ir.ui.view">
        <field name="name">Timetable form</field>
        <field name="model">eschool.timetable</field>
        <field name="arch" type="xml">
            <form string="Timetable form">
                <sheet>
                    <group>
                        <group>
                            <field name="day"/>
                            <field name="class_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="order"/>
                                    <field name="subject_id"/>
                                    <field name="teacher_id"/>
                                    <field name="periodically"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eschool_timetable_tree_view" model="ir.ui.view">
        <field name="name">Timetable</field>
        <field name="model">eschool.timetable</field>
        <field name="arch" type="xml">
            <tree>
                <field name="day"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="eschool_timetable_kanban_view">
        <field name="name">Timetable</field>
        <field name="model">eschool.timetable</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="class_id">
                <field name="line_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div>
                                    <h3>
                                        <field name="day"/>
                                    </h3>
                                    <field name="line_ids" widget="timetable_lines"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="eschool_timetable_action" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eschool.timetable</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
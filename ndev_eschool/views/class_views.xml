<odoo>
    <record id="eschool_class_form_view" model="ir.ui.view">
        <field name="name">class form</field>
        <field name="model">eschool.class</field>
        <field name="arch" type="xml">
            <form string="class action">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="year_id"/>
                            <field name="curator_id"
                                   domain="[('is_teacher','=',True)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pupils">
                            <field name="pupil_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="birth"/>
                                    <field name="age"/>
                                    <field name="parent_ids"
                                           widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eschool_class_tree_view" model="ir.ui.view">
        <field name="name">classs</field>
        <field name="model">eschool.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="year_id"/>
                <field name="curator_id"/>
            </tree>
        </field>
    </record>

    <record id="eschool_class_action" model="ir.actions.act_window">
        <field name="name">class</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eschool.class</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
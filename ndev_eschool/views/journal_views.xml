<odoo>
    <record id="eschool_journal_form_view" model="ir.ui.view">
        <field name="name">journal form</field>
        <field name="model">eschool.journal</field>
        <field name="arch" type="xml">
            <form string="journal action">

                <header>
                    <button type="object" string="Open journal"
                            name="action_open"
                            context="{'default_journal_id':id}"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="class_id"/>
                            <field name="year"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pupils">
                            <field name="pupil_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="birth"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eschool_journal_line_tree_view" model="ir.ui.view">
        <field name="name">Journals</field>
        <field name="model">eschool.journal.line</field>
        <field name="arch" type="xml">
            <tree create="0" multi_edit="1" editable="top"
                  default_order="pupil_id" delete="0"
                  decoration-muted="state == 'not_present'"
                  decoration-success="score == '5'"
                  decoration-info="score == '4'"
                  decoration-warning="score == '3'"
                  decoration-danger="score == '2' or score=='1'">
                <field name="pupil_id"/>
                <field name="state"/>
                <field name="score"/>
            </tree>
        </field>
    </record>

    <record id="eschool_journal_tree_view" model="ir.ui.view">
        <field name="name">journals</field>
        <field name="model">eschool.journal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="eschool_journal_kanban_view" model="ir.ui.view">
        <field name="name">journals</field>
        <field name="model">eschool.journal</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div>
                                    <h2>
                                        <field name="name"/>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="eschool_journal_action" model="ir.actions.act_window">
        <field name="name">journal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eschool.journal</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
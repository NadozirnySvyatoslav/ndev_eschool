<odoo>
    <record id="eschool_lesson_form_view" model="ir.ui.view">
        <field name="name">Lesson form</field>
        <field name="model">eschool.lesson</field>
        <field name="arch" type="xml">
            <form string="Lesson action">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eschool_lesson_tree_view" model="ir.ui.view">
        <field name="name">Lessons</field>
        <field name="model">eschool.lesson</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="eschool_lesson_action" model="ir.actions.act_window">
        <field name="name">Lesson</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eschool.lesson</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
<odoo>
    <record id="eschool_subject_form_view" model="ir.ui.view">
        <field name="name">Subject</field>
        <field name="model">eschool.subject</field>
        <field name="arch" type="xml">
            <form string="subject action">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Teachers">
                            <field name="teacher_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="eschool_subject_tree_view" model="ir.ui.view">
        <field name="name">Subjects</field>
        <field name="model">eschool.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="teacher_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="eschool_subject_action" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">eschool.subject</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>